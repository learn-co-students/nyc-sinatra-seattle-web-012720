<form method="POST" action="/figures">
<label>Name of Figure</label>
<input type="text" name="figure[name]" id="figure_name">
<br>
<br>
<label>Title of Figure</label><br>
<br>
<% @titles.each do |title| %>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
<% end %>
<br>

<p>Create a new title</p>
<label>Title</label>
<input type="text" name="title[name]" id="new_title">
<br>

<p>Select landmarks for this figure</p>
<label>Landmarks</label><br>
<br>
<% @landmarks.each do |landmark| %>
<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
<% end %>

<p>Or create a new landmark</p>
<label>Landmark</label>
<input type="text" name="landmark[name]" id="new_landmark">
<label>Year Completed</label>
<input type="text" name="landmark[year_completed]" id="year_completed">
<br>
<br>
<input type="submit" value="Create New Figure">
<br>
</form>